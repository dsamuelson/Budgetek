{{!-- incomes,
        expenses,
        user,
        loggedIn --}}
<div class="dashboard-header">
    <button id="showExpense">Show Expenses</button>
    <button id="showIncome">Show Income</button>
</div>
<div class="dashboard-body">
    <div class="column">
        <div class="money-section">
            <h2>Incoming</h2>
            {{#if incomes.0.total_pay}}
            <p id="total-incomes">{{incomes.0.total_pay}}</p>
            {{/if}}
        </div>
        <div class="money-section">
            <h2>Outgoing</h2>
            {{#if expenses.0.total_bills}}
            <p id="total-expenses">{{expenses.0.total_bills}}</p>
            {{/if}}
        </div>
        <div class="money-section">
            <h2>Difference</h2>
            {{#if budgetDiff}}
            <p id="difference">{{budgetDiff}}</p>
            {{/if}}
        </div>
    </div>

    <div id="user-id" hidden>{{userId}}</div>
    
    <div id="expenses" hidden>
        {{> expenses-form expenses}}
    </div>
    
    <div id="incomes" hidden>
        {{> incomes-form incomes}}
    </div>
    
</div>

<script src="/javascript/difference.js"></script>
<script src="/javascript/showPartial.js"></script>
<script src="/javascript/expense.js"></script>
<script src="/javascript/income.js"></script>