<article class="post">
  <div class="title">
   <h2><a href="/post/{{id}}">{{title}}</a></h2>
  </div>
  <div class="content">
    <p>{{post_content}}</p>
  </div>
  <div class="meta">
   by Anonymous on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>